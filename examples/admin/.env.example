# Database connection
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/mastra_admin

# Directory containing Mastra projects to discover
PROJECTS_DIR=/path/to/your/projects

# Admin server port
PORT=3001

# Encryption secret (generate a random 32+ character string for production)
ADMIN_ENCRYPTION_SECRET=dev-encryption-secret-change-in-production

# ClickHouse connection for observability
# Set ENABLE_CLICKHOUSE=true to enable ClickHouse query provider and ingestion worker
ENABLE_CLICKHOUSE=false
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=mastra_observability
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=clickhouse
