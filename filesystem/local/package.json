{
  "name": "@mastra/filesystem-local",
  "version": "0.0.1",
  "description": "Local filesystem provider for Mastra workspaces - stores files in a folder on disk",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest --run",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@mastra/core": "workspace:*"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "mastra",
    "workspace",
    "filesystem",
    "local"
  ],
  "license": "Apache-2.0"
}
