{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "noEmit": true,
    "paths": {
      "@e2e/shared": ["./_shared/index.ts"],
      "@e2e/shared/*": ["./_shared/*"]
    }
  },
  "include": ["./*.ts", "./_shared/**/*.ts", "./suites/**/*.ts"],
  "exclude": ["node_modules", "dist", "templates", "**/template/**", "kitchen-sink"]
}
