{
  "name": "@mastra/firecrawl",
  "version": "1.0.4-alpha.77",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup src/index.ts --format esm --dts --clean --treeshake",
    "dev": "tsup src/index.ts --format esm --dts --clean --treeshake --watch",
    "lint": "dts lint",
    "size": "size-limit",
    "start": "dts watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "clean": "rm -rf dist && rm -rf node_modules",
    "gen:zod:schema": "pnpx ts-to-zod  src/client/types.gen.ts src/client/zodSchema.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "size-limit": [
    {
      "path": "dist/mylib.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/mylib.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-image": "^3.0.3",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@tsconfig/recommended": "^1.0.7",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.1.0",
    "dts-cli": "^2.0.5",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "size-limit": "^11.1.4",
    "ts-jest": "^29.2.4",
    "tslib": "^2.6.3",
    "typescript": "^5.7.3",
    "tsup": "^8.0.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hey-api/client-fetch": "^0.3.3",
    "@mastra/core": "workspace:*",
    "@mastra/rag": "workspace:*",
    "zod": "^3.24.0",
    "ts-to-zod": "^3.13.0"
  }
}
