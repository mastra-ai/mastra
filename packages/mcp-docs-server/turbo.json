{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "prepare-docs": {
      "cache": false,
      "outputs": [".docs/**"],
      "dependsOn": ["build:cli"]
    },
    "build": {
      "dependsOn": ["build:cli", "prepare-docs"]
    },
    "build:cli": {
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build", "build:cli", "prepare-docs"],
      "outputs": []
    }
  }
}
