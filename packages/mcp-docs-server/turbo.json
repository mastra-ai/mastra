{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:docs": {
      "outputs": ["../../docs/build/**"],
      "outputLogs": "errors-only"
    },
    "prepare-docs": {
      "cache": false,
      "dependsOn": ["build:docs"],
      "outputs": [".docs/**"]
    },
    "build": {
      "dependsOn": ["build:cli", "build:docs", "prepare-docs"]
    },
    "build:cli": {
      "outputs": ["dist/**", "!dist/docs/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
