{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:lib": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "!dist/docs/**"]
    },
    "build:patch-commonjs": {
      "dependsOn": ["build:lib"],
      "outputs": ["./**/*.d.ts"]
    },
    "build:docs": {
      "dependsOn": ["build:lib"],
      "outputs": ["dist/docs/**"]
    },
    "build": {
      "dependsOn": ["build:patch-commonjs", "build:lib", "build:docs"]
    }
  }
}
