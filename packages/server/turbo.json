{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:lib": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "tsup.config.ts",
        "tsconfig.json",
        "package.json",
        "!**/*.md",
        "!**/*.test.ts",
        "!**/*.spec.ts",
        "!**/__tests__/**"
      ],
      "outputs": ["dist/**", "!dist/docs/**"]
    },
    "build:patch-commonjs": {
      "dependsOn": ["build:lib"],
      "outputs": ["./**/*.d.ts"]
    },
    "build:docs": {
      "dependsOn": ["build:lib"],
      "inputs": ["src/**", "package.json", "!**/*.md"],
      "outputs": ["dist/docs/**"]
    },
    "build": {
      "dependsOn": ["build:patch-commonjs", "build:lib", "build:docs"],
      "inputs": ["package.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json", "package.json", "vitest.config.*", "!**/*.md"],
      "outputs": []
    }
  }
}
