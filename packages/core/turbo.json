{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["pre-build"],
      "outputs": ["./**/*.d.ts"]
    },
    "pre-build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["$TURBO_DEFAULT$", "./tsup.config.ts", "!__integration-test__/**/*"]
    },
    "test": {
      "dependsOn": ["test:unit", "test:types:zod"],
      "inputs": ["$TURBO_DEFAULT$", "./vitest.config.ts"]
    },
    "test:unit": {},
    "test:types:zod": {}
  }
}
