{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["build:patch-commonjs", "build:lib", "build:docs"]
    },
    "build:patch-commonjs": {
      "dependsOn": ["build:lib"],
      "outputs": ["./**/*.d.ts"]
    },
    "build:docs": {
      "dependsOn": ["build:lib"],
      "outputs": ["dist/docs/**"]
    },
    "build:lib": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "!dist/docs/**"],
      "inputs": ["$TURBO_DEFAULT$", "./tsup.config.ts", "!__integration-test__/**/*"]
    },
    "test": {
      "dependsOn": ["test:unit", "test:types:zod", "test:integration"],
      "inputs": ["$TURBO_DEFAULT$", "./vitest.config.ts"]
    },
    "test:unit": {},
    "test:types:zod": {}
  }
}
