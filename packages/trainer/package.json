{
  "name": "@mastra/trainer",
  "version": "0.1.0-alpha.1",
  "description": "Agent-level training and fine-tuning for Mastra",
  "type": "module",
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "homepage": "https://mastra.ai",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mastra-ai/mastra.git",
    "directory": "packages/trainer"
  },
  "bugs": {
    "url": "https://github.com/mastra-ai/mastra/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./providers/openai": {
      "import": {
        "types": "./dist/providers/openai/index.d.ts",
        "default": "./dist/providers/openai/index.js"
      },
      "require": {
        "types": "./dist/providers/openai/index.d.ts",
        "default": "./dist/providers/openai/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "check": "tsc --noEmit",
    "build": "pnpm check && tsup --silent --config tsup.config.ts",
    "build:watch": "pnpm build --watch",
    "test": "vitest",
    "lint": "eslint ."
  },
  "keywords": [
    "mastra",
    "ai",
    "fine-tuning",
    "training",
    "sft",
    "dpo",
    "rft",
    "openai"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "p-map": "^7.0.3"
  },
  "peerDependencies": {
    "@mastra/core": ">=1.0.0-0 <2.0.0-0",
    "zod": "^3.25.0 || ^4.0.0"
  },
  "devDependencies": {
    "@internal/lint": "workspace:*",
    "@internal/types-builder": "workspace:*",
    "@mastra/core": "workspace:*",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "dotenv": "^17.0.0",
    "eslint": "^9.37.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "catalog:",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=22.13.0"
  }
}
