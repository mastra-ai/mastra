{
  "name": "@mastra/docs-mcp",
  "version": "0.0.1-alpha.0",
  "description": "MCP server for accessing Mastra.ai documentation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/stdio.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepare-docs": "tsx src/prepare-docs/index.ts",
    "prebuild": "pnpm prepare-docs",
    "build": "tsc",
    "predev": "pnpm prepare-docs",
    "dev": "fastmcp dev src/index.ts",
    "inspect": "fastmcp inspect src/index.ts",
    "build:watch": "pnpm build --watch",
    "pretest": "pnpm prepare-docs",
    "test": "vitest run",
    "lint": "eslint ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mastra/core": "workspace:^",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@types/jsdom": "^21.1.7",
    "date-fns": "^4.1.0",
    "exit-hook": "^4.0.0",
    "fastmcp": "^1.20.4",
    "jsdom": "^26.0.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ai-sdk/anthropic": "^1.1.15",
    "@internal/lint": "workspace:*",
    "@microsoft/api-extractor": "^7.52.1",
    "@types/node": "^20.11.24",
    "@wong2/mcp-cli": "^1.6.0",
    "eslint": "^9.22.0",
    "tsup": "^8.4.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^3.0.8"
  }
}
