{
"compilerOptions": {
  "rootDir": "src",
  "outDir": "dist",
  "target": "es6",
  "skipLibCheck": true,
  "strict": true,
  "esModuleInterop": true,
  "module": "esnext",
  "moduleResolution": "bundler",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "jsx": "preserve",
  "plugins": [
    {
      "name": "next"
    }
  ],
  "paths": {
    "@/*": ["./src/*"]
  },
  "forceConsistentCasingInFileNames": true
},
"exclude": ["node_modules", "src/files/**"]
}