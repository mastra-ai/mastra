{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "target": "es2021",
    "module": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext"
  },
  "exclude": ["node_modules", "src/starter-files/**", "**/*.test.ts"],
  "ts-node": {
    "ignore": ["src/starter-files/**"]
  }
}
