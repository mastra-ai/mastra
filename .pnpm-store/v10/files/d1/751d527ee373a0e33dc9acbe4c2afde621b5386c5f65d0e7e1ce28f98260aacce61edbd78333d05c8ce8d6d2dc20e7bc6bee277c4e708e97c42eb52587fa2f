  async run(input) {
    if (!this.hasGenerateScore) {
      throw new chunkTWH4PTDG_cjs.MastraError({
        id: "MASTR_SCORER_FAILED_TO_RUN_MISSING_GENERATE_SCORE",
        domain: "SCORER" /* SCORER */,
