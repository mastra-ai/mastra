var import_v45 = require("zod/v4");
function validateSchema(schema, values) {
  try {
    schema.parse(values);
    return { success: true, data: values };
  } catch (error) {
    if (error instanceof import_v45.z.ZodError) {
      return { success: false, errors: error.issues };
