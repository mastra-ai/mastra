// src/v3/field-type-inference.ts
var import_zod = require("zod");
function inferFieldType(schema, fieldConfig2) {
  if (fieldConfig2?.fieldType) {
    return fieldConfig2.fieldType;
  }
  if (schema instanceof import_zod.z.ZodObject) return "object";
  if (schema instanceof import_zod.z.ZodString) return "string";
  if (schema instanceof import_zod.z.ZodNumber) return "number";
  if (schema instanceof import_zod.z.ZodBoolean) return "boolean";
  if (schema instanceof import_zod.z.ZodDate) return "date";
  if (schema instanceof import_zod.z.ZodEnum) return "select";
  if (schema instanceof import_zod.z.ZodNativeEnum) return "select";
  if (schema instanceof import_zod.z.ZodArray) return "array";
  return "string";
}

