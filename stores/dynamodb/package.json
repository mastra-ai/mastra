{
  "name": "@mastra/dynamodb",
  "version": "0.0.1",
  "description": "DynamoDB storage adapter for Mastra",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --clean --treeshake=smallest --splitting",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "pretest": "docker compose up -d",
    "test": "vitest run",
    "posttest": "docker compose down -v",
    "pretest:watch": "docker compose up -d",
    "test:watch": "vitest watch",
    "posttest:watch": "docker compose down -v",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "electrodb": "^3.4.1"
  },
  "peerDependencies": {
    "@mastra/core": "^0.9.4"
  },
  "devDependencies": {
    "@internal/lint": "workspace:*",
    "@mastra/core": "workspace:*",
    "@microsoft/api-extractor": "^7.52.1",
    "@types/node": "^20.17.27",
    "@vitest/coverage-v8": "3.0.9",
    "@vitest/ui": "3.0.9",
    "axios": "^1.8.4",
    "eslint": "^9.23.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  }
}
