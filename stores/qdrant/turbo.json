{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:lib": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "!dist/docs/**"]
    },
    "build:docs": {
      "dependsOn": ["build:lib", "mastra-docs#build"],
      "outputs": ["dist/docs/**"]
    },
    "build": {
      "dependsOn": ["build:lib"]
    }
  }
}
